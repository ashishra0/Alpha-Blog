<h1 align="center" class="title">All Viablers</h1>
<div align="center">
<%= will_paginate %>
<% @users.each do |user| %>
<ul class="listing">
<div class="row">
<div class="well col-md-4 col-md-offset-4">
<% if !user.avatar_file_name.nil? %>
    <li><%= image_tag user.avatar.url(:thumb), class: "profile" %></li>
    <% else %>
<p> No Profile Pic </p>
<% end %>
    <li class="article-title">
    <%= link_to user.username, user_path(user) %>
    </li>
    <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
    <% if logged_in? and current_user.admin? %>
    <li><%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Proceed with deleting user"} %></li>
    <li><%= link_to "Edit User", edit_user_path(user) %></li>
    <% end %>
</div>
</div>
</ul>
<% end %>
<%= will_paginate %>
</div>
<% if current_user == @user %>
<h1 align="center"> Howdy <%= @user.username %>!</h1>
<% else %>
<h1 align="center"><%= @user.username %>'s Articles</h1>
<% end %>

<div class="row">
<div class="col-md-4 col-md-offset-4 center">
<% if !@user.avatar_file_name.nil? %>
<%= image_tag @user.avatar.url(:medium), class: "profile" %>
<% else %>
<p> No Profile Pic </p>
<% end %>
</div>
</div>


<div class="center">
<% if @user_articles.count > 0 %>
<%= will_paginate @user_articles %>
<% else %>
<div class="well">
No articles to display
</div>
<% end %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="center">
<%= will_paginate @user_articles %>
</div>